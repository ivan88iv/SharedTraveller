<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/new_request_content">

    <TextView
        style="@style/new_request_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_request_title" />
    
    <TextView android:text="@string/new_request_sub_title" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/new_request_sub_title"/>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/new_request_row">
    	<TextView android:text="@string/new_request_email"
    	    android:layout_height="wrap_content"
    	    style="@style/new_request_label"/>
    	<CheckBox  
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"/>    
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/new_request_row">
    	<TextView android:text="@string/new_request_sms"
    	    android:layout_height="wrap_content"
    	    style="@style/new_request_label"/>
    	<CheckBox  
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"/>    
    </LinearLayout>
    
</LinearLayout>
