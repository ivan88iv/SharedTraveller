<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
   	<item android:state_enabled="false" >
	     <shape android:shape="rectangle"  >
	         <corners android:radius="3dip" />
	         <stroke android:width="1dip" android:color="#30000000" />
	         <gradient android:angle="-90" 
	            android:startColor="#30ff8282" android:endColor="#30e2e2e2" />             
	     </shape>
	</item>
	<item android:state_pressed="true" >
	     <shape android:shape="rectangle"  >
	         <corners android:radius="3dip" />
	         <stroke android:width="1dip" android:color="#000" />
	         <gradient android:angle="-90" 
	            android:startColor="#ff8282" android:endColor="#e2e2e2" />             
	     </shape>
	</item>
	<item android:state_focused="true">
	     <shape android:shape="rectangle"  >
	         <corners android:radius="3dip" />
	         <stroke android:width="1dip" android:color="#000" />
	         <gradient android:angle="-90" 
	            android:startColor="#ff8282" android:endColor="#ff1a00" />         
	     </shape>
	 </item>  
	<item>
	    <shape android:shape="rectangle"  >
	         <corners android:radius="3dip" />
	         <stroke android:width="1dip" android:color="#000" />
	         <gradient android:angle="-90" 
	            android:startColor="#ff8282" android:endColor="#ff1a00" />            
	     </shape>
	 </item>
</selector>