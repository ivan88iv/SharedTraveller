<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular 
        API-level can go here. -->
	    <item name="sdlDialogStyle">@style/DialogStyleDark.Custom</item>
    </style>
    
    <style name="DialogStyleDark.Custom">
	    <item name="buttonTextColor">#000</item>
	    <item name="buttonSeparatorColor">#000</item>
	    <item name="buttonBackgroundColorNormal">#EBEBEB</item>
	    <item name="buttonBackgroundColorPressed">#FF9A35</item>
	    <item name="buttonBackgroundColorFocused">#C5C5C5</item>
	    <item name="dialogBackground">@drawable/dialog_background</item>
    </style>
    
    
    <!-- Genral -->
    <style name="dark_bottom_border">
        <item name="android:background">@drawable/bottom_border_dark</item>
    </style>
    
    <style name="light_bottom_border_big">
        <item name="android:background">@drawable/bottom_border_light_big</item>
    </style>

    <style name="light_bottom_border_small">
        <item name="android:background">@drawable/bottom_border_light_small</item>
    </style>

    <!-- Announcement Tabs -->
    <style name="announcement_tab" parent="Theme.PageIndicatorDefaults">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tab_indicator">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">#8A000000</item>
    </style>

    <style name="announcement_tab_content">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">#B6B7B8</item>
    </style>

    <style name="required_field">
        <item name="android:textColor">#F50000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="announcement_label" parent="dark_bottom_border">
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="announcement_details_label">
        <item name="android:gravity">left</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="announcement_details_value">
        <item name="android:gravity">right</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="announcement_details_address_value">
        <item name="android:gravity">left</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="announcement_info_holder">
        <item name="android:gravity">center</item>
    </style>
    
     <!-- Activity themes -->

    <style name="Theme.Base" parent="android:Theme.Holo.Light" />

    <style name="Theme.Sample" parent="Theme.Base" />

    <!-- Widget styling -->

    <style name="Widget" />

    <style name="Widget.SampleContentContainer">
        <item name="android:paddingTop">@dimen/vertical_page_margin</item>
        <item name="android:paddingBottom">@dimen/vertical_page_margin</item>
        <item name="android:paddingLeft">@dimen/horizontal_page_margin</item>
        <item name="android:paddingRight">@dimen/horizontal_page_margin</item>
    </style>

    <style name="Widget.SampleMessage">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Widget.SampleDashboard.Grid" parent="Widget">
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:columnWidth">200dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:horizontalSpacing">@dimen/margin_medium</item>
        <item name="android:verticalSpacing">@dimen/margin_medium</item>
    </style>

    <style name="Widget.SampleDashboard.Item" parent="Widget">
        <item name="android:background">@drawable/sample_dashboard_item_background</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
    </style>

    <style name="Widget.SampleDashboard.Item.Title" parent="Widget">
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">#09c</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Widget.SampleDashboard.Item.Description" parent="Widget">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>
    
    <!-- New Request -->
    <style name="new_request_content">
       <item name="android:paddingTop">10dp</item>
       <item name="android:paddingBottom">10dp</item>
    </style>
    
    <style name="new_request_bordered" parent="light_bottom_border_big">
        <item name="android:textColor">#fff</item>
    </style>
    
    <style name="new_request_bordered_small" parent="light_bottom_border_small">
        <item name="android:textColor">#fff</item>
    </style>
    
    <style name="new_request_title" parent="new_request_bordered">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <style name="new_request_sub_title">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="new_request_row">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="new_request_label" parent="light_bottom_border_small">
        <item name="android:paddingLeft">10sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">130dp</item>
    </style>
</resources>