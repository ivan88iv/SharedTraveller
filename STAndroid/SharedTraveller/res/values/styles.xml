    <style name="EditEventCustomActionButton" parent="android:style/Widget.Holo.Light.ActionButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditEventCustomActionButtonImage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="EditEventCustomActionButtonText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?android:attr/actionMenuTextAppearance</item>
        <item name="android:textColor">?android:attr/actionMenuTextColor</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="Widget.SampleDashboard.Item.Description" parent="Widget">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- ========================= Dialog ============================ -->
    <style name="DialogStyleDark.Custom">
        <item name="buttonTextColor">#000</item>
        <item name="buttonSeparatorColor">#000</item>
        <item name="buttonBackgroundColorNormal">#EBEBEB</item>
        <item name="buttonBackgroundColorPressed">#FF9A35</item>
        <item name="buttonBackgroundColorFocused">#C5C5C5</item>
        <item name="dialogBackground">@drawable/dialog_background</item>
    </style>
    
    <style name="dialog_content">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    
    <style name="dialog_bordered" parent="light_bottom_border_big">
        <item name="android:textColor">#fff</item>
    </style>
    
    <style name="dialog_title" parent="dialog_bordered">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <style name="dialog_description">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- ========================= New Request ============================ -->
    <style name="notifcation_dialog_row">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="notification_dialog_label" parent="light_bottom_border_small">
        <item name="android:paddingLeft">10sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">130dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    
    <!-- ========================= Requests =============================== -->
    <style name="requests_container">
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">#808080</item>
    </style>
    
    <style name="requests_hdr_container" parent="light_border">
    </style>
    
    <style name="requests_hdr">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="requests_delim_bar">
        <item name="android:background">#fff</item>
    </style>
    
    <style name="requests_row_btns_holder" parent="topless_light_border">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    
	<style name="requests_btn">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
	</style>
	
	<style name="requests_btn_placeholder">
	    <item name="android:layout_marginRight">12dp</item>
	    <item name="android:layout_marginLeft">12dp</item>
	</style>

	<style name="requests_call_btn" parent="requests_btn">
	    <item name="android:background">@drawable/call_button_background</item>
	</style>
	
    <style name="reject_request_btn" parent="requests_btn">
        <item name="android:background">@drawable/reject_button_background</item>
    </style>
    
    <style name="requests_front">
        <item name="android:background">#808080</item>
    </style>
    
    <style name="username_holder">
        <item name="android:textColor">#fff</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textStyle">italic</item>
    </style>
