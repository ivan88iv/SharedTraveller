<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/AppBaseTheme">

        <!--
        All customizations that are NOT specific to a particular 
        API-level can go here.
        -->
        <item name="sdlDialogStyle">@style/DialogStyleDark.Custom</item>
    </style>

    <style name="DialogStyleDark.Custom">
        <item name="buttonTextColor">#000</item>
        <item name="buttonSeparatorColor">#000</item>
        <item name="buttonBackgroundColorNormal">#EBEBEB</item>
        <item name="buttonBackgroundColorPressed">#FF9A35</item>
        <item name="buttonBackgroundColorFocused">#C5C5C5</item>
        <item name="dialogBackground">@drawable/dialog_background</item>
    </style>

    <!-- Genral -->
    <style name="dark_bottom_border">
        <item name="android:background">@drawable/bottom_border_dark</item>
    </style>

    <style name="light_bottom_border_big">
        <item name="android:background">@drawable/bottom_border_light_big</item>
    </style>

    <style name="light_bottom_border_small">
        <item name="android:background">@drawable/bottom_border_light_small</item>
    </style>

    <!-- Announcement Tabs -->
    <style name="announcement_tab" parent="Theme.PageIndicatorDefaults">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tab_indicator">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">#8A000000</item>
    </style>

    <style name="announcement_tab_content">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">#B6B7B8</item>
    </style>

    <style name="required_field">
        <item name="android:textColor">#F50000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="announcement_label" parent="dark_bottom_border">
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="announcement_label_without_underline">
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="announcement_info_holder">
        <item name="android:gravity">center</item>
    </style>

    <!-- Activity themes -->

    <style name="Theme.Base" parent="android:Theme.Holo.Light" />

    <style name="Theme.Sample" parent="Theme.Base" />

