<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Announcement Tabs -->
    <style name="announcement_tab" parent="Theme.PageIndicatorDefaults" >
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
		<item name="android:gravity">center</item>      
    </style>
    
    <style name="tab_indicator">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">#8A000000</item>
    </style>
    
    <style name="announcement_tab_content">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">#B6B7B8</item>
    </style>
    
    <style name="bottom_border">
        <item name="android:background">@drawable/bottom_border</item>
    </style>
    
    <style name="required_field">
        <item name="android:textColor">#F50000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="announcement_label" parent="bottom_border">
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <style name="announcement_info_holder" >
        <item name="android:gravity">center</item>
    </style>
</resources>
